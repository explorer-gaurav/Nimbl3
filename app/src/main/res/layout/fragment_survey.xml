<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/layout_progress_loader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.gauravsaluja.nimbl3.customviews.VerticalViewPager
        android:id="@+id/survey_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.gauravsaluja.nimbl3.customviews.CirclePageIndicator
        android:id="@+id/indicator_surveys"
        android:layout_width="@dimen/value_32dp"
        android:layout_height="match_parent"
        android:clickable="true"
        app:fades="false"
        app:fillColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:pageColor="@android:color/transparent"
        app:radius="@dimen/value_6dp"
        app:strokeColor="@color/white"
        app:strokeWidth="@dimen/value_1dp" />

</android.support.constraint.ConstraintLayout>